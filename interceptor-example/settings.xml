<settings>
  <mirrors>
    <mirror>
      <id>os-mirror-external</id>
      <mirrorOf>external:*,!os-releases,!os-snapshots</mirrorOf>
      <name>OS Mirror External (Nexus)</name>
      <url>http://mavenproxy.optimal-systems.de:8888/nexus/content/groups/public</url>
    </mirror>
  </mirrors>
  <profiles>
    <profile>
      <id>repositories-and-proxies</id>
      <repositories>
        <!-- OS repositories -->
        <repository>
          <id>os-releases</id>
          <name>OS Release Repository</name>
          <url>http://mavenproxy.optimal-systems.de:8888/nexus/content/repositories/releases/</url>
          <releases>
            <enabled>true</enabled>
          </releases>
          <snapshots>
            <enabled>false</enabled>
          </snapshots>
        </repository>
        <repository>
          <id>os-snapshots</id>
          <name>OS Snapshot Repository</name>
          <url>http://mavenproxy.optimal-systems.de:8888/nexus/content/repositories/snapshots/</url>
          <releases>
            <enabled>false</enabled>
          </releases>
          <snapshots>
            <enabled>true</enabled>
          </snapshots>
        </repository>
        <!-- Overrides for Maven default repositories -->
        <repository>
          <id>central</id>
          <name>OS Central Repository (Nexus)</name>
          <url>http://mavenproxy.optimal-systems.de:8888/nexus/content/groups/public</url>
          <releases>
            <enabled>true</enabled>
          </releases>
          <snapshots>
            <enabled>false</enabled>
          </snapshots>
        </repository>
        <repository>
          <id>snapshots</id>
          <name>OS Central Repository (Nexus)</name>
          <url>http://mavenproxy.optimal-systems.de:8888/nexus/content/groups/public</url>
          <releases>
            <enabled>false</enabled>
          </releases>
          <snapshots>
            <enabled>true</enabled>
          </snapshots>
        </repository>
        <repository>
          <id>prdev-releases</id>
          <name>PRDEV Release Repository</name>
          <url>http://prdevbuild.optimal-systems.de/nexus/content/groups/public/</url>
          <releases>
            <enabled>true</enabled>
          </releases>
          <snapshots>
            <enabled>false</enabled>
          </snapshots>
        </repository>
      </repositories>
      <pluginRepositories>
        <!-- Overrides for Maven default plugin repositories -->
        <pluginRepository>
          <id>central</id>
          <name>OS Central Repository (Nexus)</name>
          <url>http://mavenproxy.optimal-systems.de:8888/nexus/content/groups/public</url>
          <releases>
            <enabled>true</enabled>
          </releases>
          <snapshots>
            <enabled>false</enabled>
          </snapshots>
        </pluginRepository>
        <pluginRepository>
          <id>snapshots</id>
          <name>OS Central Repository (Nexus)</name>
          <url>http://mavenproxy.optimal-systems.de:8888/nexus/content/groups/public</url>
          <releases>
            <enabled>false</enabled>
          </releases>
          <snapshots>
            <enabled>true</enabled>
          </snapshots>
        </pluginRepository>
      </pluginRepositories>
    </profile>
  </profiles>
  <activeProfiles>
    <activeProfile>repositories-and-proxies</activeProfile>
  </activeProfiles>
  <servers>
    <server>
      <id>os-releases</id>
      <username>os-deploy</username>
      <password>optimal~4711</password>
    </server>
    <server>
      <id>os-snapshots</id>
      <username>os-deploy</username>
      <password>optimal~4711</password>
    </server>
    <server>
      <id>prdev-releases</id>
      <username>deployment</username>
      <password>optimal</password>
    </server>
  </servers>
</settings>
